<h1>Users List</h1>

<table>
  <thead>
    <tr>
      <th>Username</th>
      <th>Apartment Number</th>
      <th>First Name</th>
      <th>Last Name</th>

    </tr>
  </thead>

  <tbody>
    <% @users.each do |user| %>
      <tr>
		<td><%= user.username %></td>
        <td><%= user.apartment_number %></td>
		<td><%= user.first_name %></td>
		<td><%= user.last_name %></td>
		<td>
			<% if user.username != "admin" %>
			<a href= "bills/userbill/<%= user.apartment_number %>">Bills</a>
			<% end %>
		</td>
      </tr>
    <% end %>
  </tbody>
</table>
