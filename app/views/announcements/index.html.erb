<p id="notice"><%= notice %></p>

<h1>Listing Announcements</h1>

<table>
  <thead>
    <tr>
      <th>Subject</th>
      <th>Date posted</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @announcements.each do |announcement| %>
      <tr>
        <td><%= announcement.subject %></td>
        <td><%= announcement.date_posted %></td>
        <td><%= link_to 'Show', announcement %></td>
        <% if current_user.username == "admin" %><td><%= link_to 'Edit', edit_announcement_path(announcement) %></td><% end %>
        <% if current_user.username == "admin" %><td><%= link_to 'Destroy', announcement, method: :delete, data: { confirm: 'Are you sure?' } %></td><% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<% if current_user.username == "admin" %><%= link_to 'New Announcement', new_announcement_path %><% end %>
