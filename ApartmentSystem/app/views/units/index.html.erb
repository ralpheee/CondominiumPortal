<p id="notice"><%= notice %></p>

<h1>Units</h1>

<table>
  <thead>
    <tr>
      <th>Unit type</th>
      <th>Unit cost</th>
      <th>Location</th>
      <th>Description</th>
      <th colspan="3"></th>
      <th rowspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @units.each do |unit| %>
      <tr>
        <td><%= unit.unit_type %></td>
        <td><%= unit.unit_cost %></td>
        <td><%= unit.location %></td>
        <td><%= unit.description %></td>
        <td><%= link_to 'Show', unit %></td>
        <td><%= link_to 'Edit', edit_unit_path(unit) %></td>
        <td><%= link_to 'Destroy', unit, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

